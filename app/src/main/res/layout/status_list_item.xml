<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/post_card_margin_horizontal"
    android:layout_marginRight="@dimen/post_card_margin_horizontal"
    android:layout_marginTop="@dimen/post_card_margin_vertical"
    android:layout_marginBottom="@dimen/post_card_margin_vertical"
    app:cardCornerRadius="@dimen/cardview_radius"
    app:cardElevation="@dimen/cardview_default_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/text_margin">

        <TextView
            android:id="@+id/card_list_item_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@android:color/black"
            android:textSize="@dimen/post_text_size"
            tools:text="Hello, this is a status!" />

        <TextView
            android:id="@+id/card_list_item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            tools:text="March 14" />
    </LinearLayout>

</android.support.v7.widget.CardView>